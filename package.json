{
  "name": "cellular-automaton",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "BABEL_DISABLE_CACHE=1 NODE_ENV=test nyc ava --verbose",
    "test:watch": "npm t -- --watch",
    "test:report": "nyc report --reporter=lcov && open coverage/lcov-report/index.html",
    "rollup": "NODE_ENV=production rollup -c rollup.config.js",
    "rollup:dev": "NODE_ENV=development rollup -c rollup.config.js",
    "rollup:watch": "npm run rollup:dev -- --watch",
    "webpack": "NODE_ENV=production webpack --config webpack.config.js --verbose",
    "webpack:dev": "NODE_ENV=development webpack --config webpack.config.js --verbose",
    "webpack:watch": "npm run webpack:dev -- --watch",
    "serve": "live-server --watch=\"./dist\"",
    "start": "npm run rollup:watch & npm run serve",
    "start:webpack": "npm run webpack:watch & npm run serve"
  },
  "ava": {
    "files": [
      "src/**/*.test.js"
    ],
    "source": [
      "src/**/*.js",
      "!dist/**/*",
      "!node_modules/**/*"
    ],
    "failFast": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "node_modules",
      "coverage",
      "dist",
      "test",
      "test{,-*}.js",
      "**/*.test.js",
      "**/__tests__/**"
    ]
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-core": "^7.0.0-alpha.18",
    "babel-eslint": "^8.0.0-alpha.15",
    "babel-loader": "^7.1.2",
    "babel-minify-webpack-plugin": "^0.2.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^7.0.0-alpha.18",
    "babel-polyfill": "^7.0.0-alpha.18",
    "babel-preset-env": "^2.0.0-alpha.20",
    "babel-register": "^7.0.0-alpha.18",
    "eslint": "^4.6.1",
    "live-server": "^1.2.0",
    "nyc": "^11.2.1",
    "rollup": "^0.49.2",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-babel-minify": "^3.1.2",
    "rollup-plugin-commonjs": "^8.2.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-watch": "^4.3.1",
    "sinon": "^3.2.1",
    "webpack": "^3.5.6"
  }
}
